@model UserLogin
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login</title>
        <link rel="stylesheet" href="~/css/User/Login.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    </head>
    <body>
        <div class="contain">
            <div class="title">
                <h1>Login</h1>
            </div>
            <form asp-controller="User" asp-action="Login" method="POST" class="form">
                <div class="formRow">
                    <label asp-for="LoginEmail" class="form-label"></label>
                    <span asp-validation-for="LoginEmail" class="error"></span>
                    <input asp-for="LoginEmail" class="form-control">
                </div>
                <div class="formRow">
                    <label asp-for="LoginPassword" class="form-label"></label>
                    <span asp-validation-for="LoginPassword" class="error"></span>
                    <input asp-for="LoginPassword" class="form-control">
                </div>
                <button type="submit" class="btn btn-outline-success">Login</button>
            </form>
            <div class="back">
                <a asp-controller="Portfolio" asp-action="Index" class="btn btn-outline-danger">Got lost? Let's go home!</a>
            </div>
            
        </div>
    </body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</html>